[*.cs]
# Вимикаємо правило StyleCop, що забороняє підкреслення (SA1309)
dotnet_diagnostic.SA1309.severity = none

# Налаштовуємо стандарт Microsoft для приватних полів (IDE0044 + IDE0008)
dotnet_naming_rule.private_members_with_underscore.symbols = private_fields
dotnet_naming_rule.private_members_with_underscore.style = prefix_underscore
dotnet_naming_rule.private_members_with_underscore.severity = suggestion

dotnet_naming_symbols.private_fields.applicable_kinds = field
dotnet_naming_symbols.private_fields.applicable_accessibilities = private

dotnet_naming_style.prefix_underscore.capitalization = camel_case
dotnet_naming_style.prefix_underscore.required_prefix = _
# Вимикає перевірку порядку елементів за рівнем доступу (SA1202)
dotnet_diagnostic.SA1202.severity = none

# Також часто йде в парі з SA1201 (Порядок: поля, конструктори, методи)
dotnet_diagnostic.SA1201.severity = none

# І SA1204 (Static елементи перед non-static)
dotnet_diagnostic.SA1204.severity = none
# Вимикає вимогу заголовка файлу (SA1633)
dotnet_diagnostic.SA1633.severity = none

# Також вимикаємо пов'язані правила для заголовків, якщо вони з'являться
dotnet_diagnostic.SA1634.severity = none
dotnet_diagnostic.SA1635.severity = none
dotnet_diagnostic.SA1636.severity = none
# Пробіли навколо символів та операторів
dotnet_diagnostic.SA1003.severity = none
dotnet_diagnostic.SA1008.severity = none
dotnet_diagnostic.SA1009.severity = none
dotnet_diagnostic.SA1010.severity = none